:host {
	background-color: var(--light-primary-color);
	font-size: 14px;
	padding: 30px;
	padding-right: 5px;
	width: 300px;

	.menu {
		height: 100%;
		width: 100%;
		z-index: 2;

		av-collapse {
			width: 100%;

			.title {
				color: var(--aventus-color);
				font-size: 18px;
				font-variant: small-caps;
				font-weight: bold;
				margin-bottom: 5px;
				margin-top: 15px;
			}

			av-collapse {
				.sub-title {
					display: flex;
					align-items: center;
					gap: 3px;
				}
				.sub-title::before {
					content: "â–¼";
					display: inline-block;
					transform: rotate(-90deg);
					transition: .5s var(--bezier-curve) transform;
				}
			}


			av-collapse[open] {
				.sub-title::before {
					transform: rotate(0deg);
				}
			}

			ul {
				margin: 0;
				padding: 0;

				li {
					color: var(--primary-font-color);
					cursor: pointer;
					font-size: 12px;
					letter-spacing: 1px;
					list-style: none;
					margin: 6px;
					margin-left: 15px;
					padding: 0;
					position: relative;
					-webkit-tap-highlight-color: transparent;

					av-link {
						transition: opacity 0.3s var(--bezier-curve);
						user-select: none;
					}

					av-link:not(.active):hover {
						opacity: 0.7;
					}

					av-link.active {
						color: var(--aventus-color);
					}

					av-link.active::before {
						background-color: var(--aventus-color);
						bottom: 0;
						content: "";
						left: -15px;
						position: absolute;
						top: 0;
						width: 5px;
					}
				}


			}
		}
	}

	.close-icon {
		color: var(--aventus-color);
		display: none;
		font-size: 24px;
		position: absolute;
		right: 24px;
		top: 12px;
	}

}

@media screen and (max-width:1100px) {
	:host {
		.menu {
			av-collapse {
				ul {
					li {
						font-size: 16px;
						margin: 12px;
						margin-left: 15px;
					}
				}
			}
		}

		.close-icon {
			display: block;
		}
	}
}
