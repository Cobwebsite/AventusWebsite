:host {
	av-col {
		flex-direction: column;
	}
	.table {
		av-row:not(.header) {

			av-col:nth-child(2) {
				text-align: justify;
			}

			av-link {
				display: contents;
			}
		}

		av-row:not(.header):nth-child(odd) {
			background-color: rgba(0, 0, 0, 0.2);
		}

		.constraint {
			display: block;
			font-size: 14px;
			margin-top: 5px;
		}
	}

	.mandatory::after {
		content: "*";
		font-weight: bold;
		margin-left: 5px;
	}
}
