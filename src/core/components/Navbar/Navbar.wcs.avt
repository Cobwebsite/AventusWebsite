:host {
	background-color: var(--primary-color);
	height: 50px;
	width: 100%;

	.container {
		display: flex;
		height: 100%;
		justify-content: space-between;
		margin: auto;
		max-width: 1200px;

		.left {
			height: 100%;
			justify-self: start;

			av-router-link {
				display: inline-block;
				height: 100%;

				av-img {
					--img-color: var(--aventus-color);
					cursor: pointer;
					height: 100%;
					-webkit-tap-highlight-color: transparent;
				}
			}
		}

		.right {
			align-items: center;
			color: var(--primary-font-color);
			display: flex;
			justify-self: end;

			.menu {
				border-radius: 5px;
				cursor: pointer;
				margin: 0 5px;
				padding: 5px 10px;
				position: relative;
				-webkit-tap-highlight-color: transparent;
				transition: color 0.5s var(--bezier-curve), background-color 0.5s var(--bezier-curve);
			}

			.menu:hover {
				background-color: var(--light-primary-color);
				color: var(--aventus-color);
			}

			.menu.active {
				background-color: var(--light-primary-color);
				color: var(--aventus-color);
			}

			.menu-title {
				color: var(--aventus-color);
				display: none;
				font-size: 2.4rem;
				margin: 16px 0;
				text-align: center;
				width: 100%;
			}

			.menu-close-icon {
				display: none;
			}

			.mode {
				align-items: center;
				display: flex;
				justify-content: center;
				cursor: pointer;
				width: 100%;
				padding: 10px 0;

				mi-icon {
					font-size: 1em;
				}

				.slider {
					border: 1px solid var(--primary-font-color);
					border-radius: 15px;
					height: 15px;
					margin: 0 10px;
					width: 30px;
					display: flex;
					align-items: center;

					.button {
						background-color: var(--primary-font-color);
						border-radius: 13px;
						height: 9px;
						width: 9px;
						margin-left: 2px;
						transition: margin-left 0.2s linear;
					}
				}
			}
		}

		.icon {
			align-items: center;
			color: var(--aventus-color);
			display: none;
			font-size: 22px;
			height: 100%;
			margin-right: 16px;
		}

		.hider {
			display: none;
		}
	}
}


@media screen and (max-width:1100px) {
	:host {
		.container {
			.right {
				align-items: self-start;
				background-color: var(--primary-color);
				box-shadow: 0 -10px 5px var(--aventus-color);
				color: var(--primary-font-color);
				flex-direction: column;
				height: 100%;
				position: fixed;
				right: -300px;
				top: 0px;
				transition: 0.4s right var(--bezier-curve);
				width: 250px;
				z-index: 90;

				.menu-title {
					display: block;
				}

				.menu {
					margin: 5px 0;
					margin-left: 24px;
				}

				.menu-close-icon {
					color: var(--aventus-color);
					display: block;
					font-size: 21px;
					left: 16px;
					position: absolute;
					top: 13px;
				}
			}

			.icon {
				display: flex;
			}

			.hider {
				background-color: transparent;
				display: none;
				height: 100%;
				left: 0;
				position: fixed;
				top: 0;
				width: 100%;
				z-index: 9;
			}
		}

	}

	:host([open]) {
		.container {
			.right {
				right: 0;
			}

			.hider {
				display: block;
			}
		}
	}
}

:host([is_dark]) {
	.container {
		.right {
			.mode {
				.slider {
					.button {
						margin-left: calc(100% - 11px);
					}
				}
			}
		}
	}
}